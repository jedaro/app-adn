{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "outDir": "./out",
        "rootDir": "./src",
        "target": "es6",
        "skipLibCheck": true,
        "strict": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "/src/tests/**/*.ts"
    ]
}